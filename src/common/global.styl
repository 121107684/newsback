html
body
    height 100%
    min-width 1182px
    background #fff
    box-sizing border-box
    padding: 0px
    margin: 0px
body
    font-family 'MicrosoftYaHei', 'Helvetica Neue', 'Helvetica', 'PingFangSC-Regular', 'Helvetica Neue', 'Hiragino Sans GB', 'WenQuanYi Micro Hei', 'Microsoft Yahei', Arial, sans-serif
    font-size 14px
ul, p
	margin 0
	padding 0
li
	list-style none
a
	text-decoration none
	&:hover
		text-decoration none
.mt20
    margin-bottom 20px
.mt16
    margin-bottom 16px
.mt8
    margin-bottom 8px
.mt0
    margin-bottom 0px !important
.mr20
    margin-right 20px
.pr20 
    padding-right 20px
.clearfix:after
    content "."
    display block
    height 0
    clear both
    visibility hidden
.full-height
    height 100%


.gray6
    color #666666
.gray9
    color #999999
.black3
    color #333333

.flex
    display flex
.flex-v-c
    display flex
    align-items center
.flex-h-c
    display flex
    justify-content center
.flex-vh-c
    display flex
    justify-content center
    align-items center
.flex-dc
    flex-direction column
.flex-1
    flex 1